#!/usr/bin/env node

var path = require("path");

var yargs = require("../lib/util/yargs.js");

var args = yargs.argv;

if (args.help) {
	yargs.showHelp();
	process.exit();
}

if (args.version) {
	console.log(require(__dirname+"/../package.json").version);
	process.exit();
}

if (!args.entry && !args.useConfig) {
	yargs.showHelp();
	process.exit(1);
}

var webant = require("../lib/webant");

console.log("Compilation beginning");
webant(process.argv.slice(2),function(err){
	if (err) {
		console.error("Compilation unsuccessful");
		throw err;
		return;
	}
	console.log("Compilation successful");
});
